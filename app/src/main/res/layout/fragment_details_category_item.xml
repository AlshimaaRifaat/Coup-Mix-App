<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DetailsCategoryItemFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/details_category_item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:background="#da0d0d"
           />
        <android.support.v7.widget.CardView
            android:id="@+id/details_category_item_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:layout_below="@+id/details_category_item_image">

            <TextView
                android:id="@+id/details_category_item_text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="#232323"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold"
                android:text="name"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/details_category_item_discount_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15474 after"
                android:textColor="#209cce"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"

                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5554 before"
                android:textColor="#818386"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_90sdp"
                />
            <TextView
                android:id="@+id/details_category_item_text_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-50 disc ratio"
                android:textColor="#474e54"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_165sdp"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/details_category_item_card_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_below="@+id/details_category_item_card_title">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="#474e54"
                android:textSize="@dimen/_17sdp"
                android:text="Coupon detail"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/details_category_item_text_coupon_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="details description"
                android:textColor="#6b6c6e"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/details_category_item_card_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_below="@+id/details_category_item_card_detail">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="#474e54"
                android:textSize="@dimen/_17sdp"
                android:text="Features Offer"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/details_category_item_text_features_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offer description"
                android:textColor="#6b6c6e"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/details_category_item_card_direction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_below="@+id/details_category_item_card_offer">
                   <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="#474e54"
                android:textSize="@dimen/_17sdp"
                android:text="Directions"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <ImageView
                android:id="@+id/details_category_item_image_location"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/layer_1"
                android:textColor="#6b6c6e"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                />

    <TextView
        android:id="@+id/details_category_item_text_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_55sdp"
        android:layout_toEndOf="@+id/details_category_item_image_location"
        android:text="Egypt"
        android:textColor="#6b6c6e"
        android:textSize="@dimen/_12sdp" />

    <ImageView
        android:id="@+id/details_category_item_image_phone"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/layer_0"
        android:textColor="#6b6c6e"
        android:textSize="@dimen/_12sdp"
        android:layout_below="@id/details_category_item_image_location"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        />
    <TextView
        android:id="@+id/details_category_item_text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0114158652"
        android:textColor="#6b6c6e"
        android:textSize="@dimen/_12sdp"
        android:layout_toEndOf="@+id/details_category_item_image_phone"
        android:layout_below="@+id/details_category_item_text_country"
        android:layout_marginTop="@dimen/_23sdp"
        />
           </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="@string/Order"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/button"
            android:layout_below="@+id/details_category_item_card_direction"
            />
    </RelativeLayout>


</ScrollView>