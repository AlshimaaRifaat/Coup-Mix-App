<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OrderItemFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e8e8ea">
    <!-- TODO: Update blank fragment layout -->
  <EditText
      android:id="@+id/order_item_edit_text_name"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_60sdp"
      android:background="#fff"
      android:layout_marginTop="@dimen/_40sdp"
      android:layout_marginLeft="@dimen/_25sdp"
      android:layout_marginRight="@dimen/_25sdp"
      android:hint="@string/Name"
      android:paddingBottom="10sp"
      android:paddingLeft="@dimen/_14sdp"
      android:paddingTop="@dimen/_8sdp"
      android:textColorHint="#000"
     />
    <EditText
        android:id="@+id/order_item_edit_text_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="#fff"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:hint="@string/Address"
        android:paddingBottom="10sp"
        android:paddingLeft="@dimen/_14sdp"
        android:paddingTop="@dimen/_8sdp"
        android:textColorHint="#000"
        />
    <EditText
        android:id="@+id/order_item_edit_text_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="#fff"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:hint="@string/Phone"
        android:paddingBottom="10sp"
        android:paddingLeft="@dimen/_14sdp"
        android:paddingTop="@dimen/_8sdp"
        android:textColorHint="#000"
        />
    <EditText
        android:id="@+id/order_item_edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="#fff"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:hint="@string/Email"
        android:paddingBottom="10sp"
        android:paddingLeft="@dimen/_14sdp"
        android:paddingTop="@dimen/_8sdp"
        android:textColorHint="#000"
        />
    <EditText
        android:id="@+id/order_item_edit_text_notes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:background="#fff"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:hint="@string/Notes"
        android:paddingBottom="10sp"
        android:paddingLeft="@dimen/_14sdp"
        android:paddingTop="@dimen/_8sdp"
        android:textColorHint="#000"
        />

    <Button
        android:id="@+id/order_item_btn_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/Order"
        android:textColor="#fff"
        android:textSize="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:layout_below="@+id/order_item_edit_text_notes"
        android:layout_marginBottom="@dimen/_23sdp"
        />
</LinearLayout>
</ScrollView>