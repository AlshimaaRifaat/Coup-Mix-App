<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8ea"
    tools:context=".fragment.SearchLocBrandFragment">


    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/search_relative_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginTop="@dimen/_120sdp"
        android:layout_marginLeft="@dimen/_17sdp"
        android:layout_marginRight="@dimen/_17sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="#fff">
    <Spinner
        android:id="@+id/search_location_spinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        ></Spinner>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/search_relative_brand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:background="#fff"
        android:layout_marginLeft="@dimen/_17sdp"
        android:layout_marginRight="@dimen/_17sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_below="@id/search_relative_location">
    <Spinner
        android:id="@+id/search_brand_spinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp">
        </Spinner>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:text="@string/Search"
        android:textColor="#fff"
        android:textSize="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_17sdp"
        android:layout_marginRight="@dimen/_17sdp"
        android:background="@drawable/button"
        android:layout_below="@+id/search_relative_brand"
        android:id="@+id/search_btn"
        android:textAllCaps="false"
        />

</RelativeLayout>